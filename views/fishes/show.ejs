<%- include("../partials/html-head") %>
<%- include("../partials/nav") %>

<main>
  <h1><%= title %> </h1>
  <section>
    <div>Name:</div>
    <div><%= fish.name %> </div>
    <div>Weight (in lb):</div>
    <div><%= fish.weight %> </div>
    <div>Date Caught:</div>
    <div><%= fish.dateCaught %> </div>
    <div>Released?</div>
    <div><%= fish.caught ? 'Yes' : 'No'%> </div>
    <% if (fish.owner.equals(user?.profile._id)) { %>
      <form action="/fishes/<%= fish._id %>/edit" method="GET">
        <button class="btn" type="submit">
          Edit This Catch
        </button>
      </form>
      <form action="/fishes/<%= fish._id %>?_method=DELETE">
        <button class="btn" type="submit">
          Delete this Fish
        </button>
      </form>
    <% } %>
  </section>
</main>


<%- include("../partials/footer") %>